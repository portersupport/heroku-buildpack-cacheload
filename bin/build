#!/usr/bin/env bash

set -e # fail fast


indent() {
  sed -u 's/^/       /'
}


BUILD_DIR="."
CACHE_DIR=$1
HOME_FOLDER_REPLACEMENT="__CACHE_HOME__"

echo "=====> Restoring files from cache"

echo "reading from cache dir $CACHE_DIR"

ls -a
ls -a $CACHE_DIR

echo "reading from layers dir"

ls -a "/layers"

echo "reading from layers dir children"

ls -a "/layers/*"

for FILENAME in $(cat ${BUILD_DIR}/.buildcache | sed '/^$/d'); do
  echo -n "${FILENAME}" | indent

  if [[ ${FILENAME} = \~/* ]]; then
    WITHOUT_TILDE=$(echo ${FILENAME} | sed 's/~\///')
    SRC=${CACHE_DIR}/buildcache/${HOME_FOLDER_REPLACEMENT}/${WITHOUT_TILDE}
    DEST=~/${WITHOUT_TILDE}
  else
    SRC=${CACHE_DIR}/buildcache/${FILENAME}
    DEST=${BUILD_DIR}/${FILENAME}
  fi

  # skip non-existing files
  if ! [ -e ${SRC} ]; then
    echo " ✗ - not found"
    continue
  fi

  # create parent directory structure
  mkdir -p $(dirname ${DEST})

  # delete old files
  if [ -e ${DEST} ]; then
    rm -r ${DEST}
  fi

  # copy files from cache
  cp -r ${SRC} ${DEST}

  echo " ✓"
done

cd $CACHE_DIR
echo "hello" > test.txt
